<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/checkin_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/choosecity_tv"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_choosecity_et"
        android:hint="@string/choosecity_et"
        android:paddingLeft="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp" />

    <ListView
        android:id="@+id/bookone_listviewcityone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        ></ListView>

    <ListView
        android:id="@+id/bookone_listviewcitytwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7fb7f2"

        ></ListView>

</LinearLayout>
